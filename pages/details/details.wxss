/* pages/details/details.wxss */
.cu-item{padding:20rpx 30rpx;position:relative;line-height:1.5;display:flex;}
.title{color:#666;min-width:calc(5em + 10rpx);}
.cu-item:after {position: absolute;top: 0;left: 0;box-sizing: border-box;width: 200%;height: 200%;border-bottom: 1rpx solid #ddd;border-radius: inherit;content: " ";transform: scale(.5);transform-origin: 0 0;pointer-events: none}
.cu-item:last-child:after {border: none}
.cu-item.block{display:block;padding-bottom:0;}
.cu-item .content{margin-top:20rpx;}
.cu__title{margin:20rpx 30rpx 0;color:#999;font-size:24rpx;}
.star{color:#ffa100;margin-right:10rpx;font-size:36rpx;}